<% content_for(:title, project.name + " - Sean Humeniuk") %>

<div class="container section">
    <div class="item">
        <div class="project-name">
            <%= project.name %>
        </div>

        <div class="project-tech">
            <% project.technologies.each do |tech| %>
            <div class="project-tech-item">
                <%= tech %>
            </div>
            <% end %>
        </div>

        <div class="project-description">
            <%= project.description %>
        </div>

        <% unless project.features.nil? %>
        <ul class="project-features">
            <% project.features.each do |feature| %>
                <li> <%= feature %> </li>
            <% end %>
        </ul>
        <% end %>

        <% unless project.images.nil? && project.videos.nil? %>
            <div class="project-images">


                <% project.images.each do |image| %>
                    
                    <a href="/images/<%= image.full %>">
                        <div class="project-image">
                            <img src="/images/<%= image.thumb %>"/>
                            <div class="project-image-text"><%= image.title %></div>
                        </div>
                    </a>
                        
                <% end %>

                <% unless project.videos.nil? %>
                    <% project.videos.each do |video| %>

                        <a href="/videos/<%= video.video %>">
                            <div class="project-video">
                                <img src="/images/<%= video.thumb %>"/>
                                <div class="project-video-icon"><img src="/images/play.png"/></div>
                            </div>
                        </a>

                    <% end %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>